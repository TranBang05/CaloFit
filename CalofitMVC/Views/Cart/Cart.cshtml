    <!-- cart main wrapper start -->
    <div class="cart-main-wrapper mt-no-text mb-no-text">
        <div class="container container-default-2 custom-area">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Cart Table Area -->
                    <div class="cart-table table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="pro-thumbnail">Ảnh</th>
                                    <th class="pro-title">Sản phẩm</th>
                                    <th class="pro-price">Giá</th>
                                    <th class="pro-quantity">Số lượng</th>
                                    <th class="pro-subtotal">Tổng cộng</th>
                                    <th class="pro-remove">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <form id="order" method="post" asp-action="Create" asp-controller="Order">
                                    @foreach (Cart cart in ViewData["list"] as List<Cart>)
                                    {
                                    <tr>
                                        <td class="pro-thumbnail">
                                            <a href="#">
                                                <img class="img-fluid"
                                                     src="@cart.Product.Ingredient.Image.ImageFilename" alt="Product" />
                                            </a>
                                        </td>
                                        <td class="pro-title"><a asp-controller="Product" asp-action="Details" asp-route-id="@cart.Productid">@cart.Product.Ingredient.Name</a></td>
                                        <td class="pro-price" id="price"><span>@cart.Product.Price</span></td>
                                        <td class="pro-quantity">
                                            <div class="quantity">
                                                <div class="cart-plus-minus">
                                                    <input class="cart-plus-minus-box" id="quantity" value="@cart.Quantity" type="text">
                                                    <div class="dec qtybutton">-</div>
                                                    <div class="inc qtybutton">+</div>
                                                    <div class="dec qtybutton"><i class="fa fa-minus"></i></div>
                                                    <div class="inc qtybutton"><i class="fa fa-plus"></i></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="pro-subtotal"><span class="sum">@(cart.Product.Price * 1)</span></td>
                                        <td class="pro-remove"><a asp-action="Delete" asp-route-productId="@cart.Productid"><i class="ion-trash-b"></i></a></td>
                                    </tr>
                                    }
                                </form>
                            </tbody>
                        </table>
                    </div>
                    <!-- Cart Update Option -->
                    <div class="cart-update-option d-block d-md-flex justify-content-between">
                        <div class="apply-coupon-wrapper">
                            <form action="#" method="post" class=" d-block d-md-flex">
                                <input type="text" placeholder="Nhập mã phiếu giảm giá của bạn" required />
                                <button class="btn obrien-button primary-btn">Áp dụng phiếu giảm giá</button>
                            </form>
                        </div>
                        <div class="cart-update mt-sm-16">
                            <a href="#" class="btn obrien-button primary-btn">Cập nhật giỏ hàng</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-5 ml-auto">
                    <!-- Cart Calculation Area -->
                    <div class="cart-calculator-wrapper">
                        <div class="cart-calculate-items">
                            <h3>Tổng số giỏ hàng</h3>
                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <td>Tổng giá</td>
                                        <td id="total"></td>
                                    </tr>
                                    <tr>
                                        <td>Phí giao hàng</td>
                                        <td>0</td>
                                    </tr>
                                    <tr class="total">
                                        <td>Tổng</td>
                                        <td class="total-amount">60.000</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <button type="submit" form="order">
                            <a asp-action="ShopList" asp-route-userId="@(Context.Session.GetInt32("user") ?? 1)" class="btn obrien-button primary-btn d-block">Lấy danh sách mua sắm</a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- cart main wrapper end -->
