<body>
   
    <main>
        <div class="background-meal position-relative">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <div class="breadcrumb-content position-relative section-content">
                            <h3 class="title">Lập kế hoạch ăn uống</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container api demo-search col-xxl-8">
            <div class="py-5">

                <div class="row">
                    <div class="col-md-12 demo-block">
                        <div class="col-md-12">
                            <div class="row">

                                <div class="col-md-12 loading-area">
                                    <div class="loader"></div>
                                </div>

                                <div class="col-md-12 noresult-area">
                                    <h2>Ooops, nothing in our database matches what you are searching for. Please try
                                        again</h2>
                                    <button type="button" class="btn btn-primary search-back">Change Search
                                        Parameters</button>
                                </div>

                                <div class="col-md-12 content-area">

                                    <div class="row begin-area">
                                        <div class="col-md-3 left-col">
                                            <div class="card-header" id="heading1">
                                                <h2><b>Bước 1:</b> Chọn số bữa mỗi ngày:</h2>
                                                <h5 class="mb-0">
                                                    <button class="btn btn-link">Các bữa mỗi ngày</button>
                                                </h5>
                                            </div>

                                       <form action="/Result" method="post">

                                            <div class="card-header" id="heading2" style="display: block;">
                                                <h2><b>Step 2:</b> Bộ lọc chọn cho mỗi bữa:</h2>
                                                <h5 class="mb-0">
                                                    <button class="btn btn-link active" onclick="toggleFilter('allergy')">Dị ứng</button>
                                                    <div id="allergyFilters">
                                                            <select id="allergyFilters" name="Allergies">
                                                            @foreach (var diet in Model.Allergies)
                                                            {
                                                                <option value="@diet.AllergyId">@diet.Allergen</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </h5>
                                            </div>
                                            <div class="card-header" id="heading3" style="display: block;">
                                                <h5 class="mb-0">
                                                    <button class="btn btn-link" onclick="toggleFilter('calories')">Ăn Kiêng</button>
                                                    <div id="caloriesFilters">
                                                            <select id="caloriesFilter" name="DietName">
                                                            @foreach (var diet in Model.Diets)
                                                            {
                                                                <option value="@diet.Id">@diet.DietName</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </h5>
                                            </div>


                                            <div class="card-header" id="heading2" style="display: block;">
                                                <h2><b>Step 2:</b> Bộ lọc chọn cho mỗi bữa:</h2>
                                                <h5 class="mb-0">
                                                    <button class="btn btn-link active" onclick="toggleFilter('lich')">Theo lich</button>
                                                    <div id="lich">
                                                            <select id="allergyFilters" name="Lich">
                                                            <option value="daily">Theo Ngày</option>
                                                            <option value="weekly">Theo Tuần</option>
                                                        </select>
                                                    </div>
                                                </h5>
                                            </div>


                                            <div class="card-header" id="heading7" style="display: block;">
                                                <h5 class="mb-0">
                                                    <button class="btn btn-link">Submit</button>
                                                </h5>
                                            </div>
                                            </form>
                                         </div>
                                  </div>
                               </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

      
   
