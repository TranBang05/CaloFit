<script>
    const tabLinks = document.querySelectorAll('.Tab__link');

    tabLinks.forEach(link => {
        link.addEventListener('click', () => {
            tabLinks.forEach(l => l.classList.remove('Tab__active'));

            link.classList.add('Tab__active');
        });
    });
</script>